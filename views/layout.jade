!!!
html(ng-app='app')
  meta(charset='utf8')
  base(href='/')
  title Final Four Volunteers
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  meta(name="description", content="Volunteer coordination application for the 2013 Final Four in Atlanta.  Built during the ATL Hoops Hackathon")
  link(href="/css/bootstrap.min.css", rel="stylesheet")
  link(href="/css/bootstrap-responsive.min.css", rel="stylesheet")
  link(href="//netdna.bootstrapcdn.com/font-awesome/3.0.2/css/font-awesome.css", rel="stylesheet")
  block head
  link(rel='stylesheet', href='/css/app.css')
  script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
  script(src='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js')
  
  body
    div.container-fluid
      div.media.hidden-phone
        a.pull-left(href='/#')
          img(src='/images/finalfour.png').media-object
        h2 Final Four Volunteers
        p.lead Final Four Volunteer Resources
    div.navbar
      div.navbar-inner
        div.container-fluid
          a(class="btn btn-navbar", data-toggle="collapse", data-target=".nav-collapse") 
            span(class="icon-bar")
            span(class="icon-bar")
            span(class="icon-bar")
          a(class="brand", href="/#").hidden-phone Final Four Volunteers
          div.nav-collapse.collapse
            ul.nav
              li
                a(href="/") Home
              li
                a(href="/shuttle") Shuttle
              if (typeof(user) != 'undefined')
                li
                  a(href="/admin") Admin
                li
                  a(href="/admin/groups") Manage Groups
              li
                a(href="/map") Map
          div.navbar-text.pull-right.hidden-phone
            if (typeof(user) == 'undefined')
              a(href='/login') Login
            else
              | Hello #{user.username} &nbsp; | &nbsp;
              a(href='/logout') Logout							
    div.container-fluid(ng-cloak)
      block body
    block map
    script(src='js/lib/angular/angular.min.js')
    script(src='js/lib/angular/angular-resource.min.js')
    script(src='js/lib/angular/angular-sanitize.min.js')
    script(src='js/ang/app.js')
    script(src='js/ang/services.js')
    script(src='js/ang/controllers.js')
    script(src='js/ang/filters.js')
    script(src='js/ang/directives.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.0.0/moment.min.js')
    script(type='text/javascript')
      var _gaq=[['_setAccount','UA-8209114-30'],['_trackPageview']];
      (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
      g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
      s.parentNode.insertBefore(g,s)}(document,'script'));
    block scripts
    
